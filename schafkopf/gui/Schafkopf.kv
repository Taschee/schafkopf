#:import FadeTransition kivy.uix.screenmanager.FadeTransition


<GameScreenManager>:
    transition: FadeTransition()
    MenuScreen:
    PlayingScreen:
    GameResultsScreen:

<MenuScreen>
    name: 'menu_screen'
    FloatLayout:
        canvas:
            Color:
                rgba: 0.4, 0.16, 0.1, 1
            Rectangle:
                size: self.size
                pos:self.pos

        Button:
            size_hint: 0.4, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.72}
            text: 'Neues Spiel'
            background_normal: ''
            background_color: 0, 0, 0, 1
            on_release: app.root.new_game()

        Button:
            id: exit_btn
            size_hint: 0.4, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.28}
            text: 'Exit'
            background_normal: ''
            background_color: 0, 0, 0, 1
            on_release: app.stop()


<PlayingScreen>:
    name: 'playing_screen'
    FloatLayout:
        id: display
        player0_proposal: player0_proposal.__self__
        player1_proposal: player1_proposal.__self__
        player2_proposal_proposal: player0_proposal.__self__
        player3_proposal_proposal: player0_proposal.__self__
        player0_card: player0_card.__self__
        player1_card: player1_card.__self__
        player2_card: player2_card.__self__
        player3_card: player3_card.__self__
        mode_buttons: mode_buttons.__self__
        player_hand: player_hand.__self__
        next_trick_button: next_trick_button.__self__
        card_1: card_1.__self__
        card_2: card_1.__self__
        card_3: card_1.__self__
        card_4: card_1.__self__
        card_5: card_1.__self__
        card_6: card_1.__self__
        card_7: card_1.__self__
        card_8: card_1.__self__

        canvas:
            Color:
                rgba: 0.4, 0.16, 0.1, 1
            Rectangle:
                size: self.size
                pos:self.pos

        Label:
            id: player0_proposal
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            size_hint: 0.15, 0.1
            text: ''
            color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                Ellipse:
                    pos: self.pos
                    size: self.size

        Label:
            id: player1_proposal
            pos_hint: {'center_x': 0.075, 'center_y': 0.6}
            size_hint: 0.15, 0.1
            text: ''
            color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                Ellipse:
                    pos: self.pos
                    size: self.size

        Label:
            id: player2_proposal
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            size_hint: 0.15, 0.1
            text: ''
            color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                Ellipse:
                    pos: self.pos
                    size: self.size

        Label:
            id: player3_proposal
            pos_hint: {'center_x': 0.925, 'center_y': 0.6}
            size_hint: 0.15, 0.1
            text: ''
            color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                Ellipse:
                    pos: self.pos
                    size: self.size

        GridLayout:
            id: mode_buttons
            pos_hint: {'center_x': 0.5, 'top': 0.7}
            size_hint: 0.6, 0.2

            rows: 3
            cols: 3
            BidButton:
                id: no_game
                text: 'Weiter'

            BidButton:
                id: partner_acorns
                text: 'Mit der Alten'

            BidButton:
                id: partner_leaves
                text: 'Mit der Blauen'

            BidButton:
                id: partner_bells
                text: 'Mit der Schellen'

            BidButton:
                id: wenz
                text: 'Wenz'

            BidButton:
                id: solo_acorns
                text: 'Eichel Solo'

            BidButton:
                id: solo_leaves
                text: 'Gras Solo'

            BidButton:
                id: solo_hearts
                text: 'Herz Solo'

            BidButton:
                id: solo_bells
                text: 'Schellen Solo'

        CardWidgetTrickplay:
            id: player_hand

            ImageButton:
                id: card_1

            ImageButton:
                id: card_2

            ImageButton:
                id: card_3

            ImageButton:
                id: card_4

            ImageButton:
                id: card_5

            ImageButton:
                id: card_6

            ImageButton:
                id: card_7

            ImageButton:
                id: card_8

        Image:
            id: player0_card
            size_hint: 0.07, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.49}

        Image:
            id: player1_card
            size_hint: 0.07, 0.2
            pos_hint: {'center_x': 0.4, 'center_y': 0.6}

        Image:
            id: player2_card
            size_hint: 0.07, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.71}

        Image:
            id: player3_card
            size_hint: 0.07, 0.2
            pos_hint: {'center_x': 0.6, 'center_y': 0.6}

        Button:
            id: next_trick_button
            text: 'Naechster Stich'
            pos_hint:{'center_x': 0.8, 'center_y': 0.3}
            size_hint: 0.15, 0.05
            on_release: root.next_trick()

        Button:
            id: menu_btn
            text: 'Menu'
            pos_hint: {'right': 1, 'y': 0}
            size_hint: 0.05, 0.05
            on_release: app.root.current = 'menu_screen'


<GameResultsScreen>:
    name: 'result_screen'
    FloatLayout:
        canvas:
            Color:
                rgba: 0.4, 0.16, 0.1, 1
            Rectangle:
                size: self.size
                pos:self.pos

        Label:
            id: winners
            size_hint: None, None
            size: self.texture_size
            font_size: 0.04 * root.height
            pos_hint: {'center_x': 0.5, 'center_y': 0.92}
            text: ''

        Label:
            id: rewards
            size_hint: None, None
            size: self.texture_size
            font_size: 0.04 * root.height
            pos_hint: {'center_x': 0.5, 'center_y': 0.72}
            text: ''


        Button:
            id: next_game
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.38}
            text: 'Weiterspielen'
            background_normal: ''
            background_color: 0, 0, 0, 1
            on_release: app.root.new_game()

        Button:
            id: exit_btn
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.24}
            text: 'Exit'
            background_normal: ''
            background_color: 0, 0, 0, 1
            on_release: app.stop()