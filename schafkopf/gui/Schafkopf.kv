#:import FadeTransition kivy.uix.screenmanager.FadeTransition


<MyScreenManager>:
    transition: FadeTransition()
    MenuScreen:
    PlayingScreen:


<MenuScreen>
    name: 'menu_screen'
    FloatLayout:
        canvas:
            Color:
                rgba: 0.4, 0.16, 0.1, 1
            Rectangle:
                size: self.size
                pos:self.pos

        Button:
            size_hint: 0.4, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.62}
            text: 'Schafkopf!'
            background_normal: ''
            background_color: 0, 0, 0, 1
            on_release: app.root.new_game()

        Button:
            id: exit_btn
            size_hint: 0.4, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.38}
            text: 'Exit'
            background_normal: ''
            background_color: 0, 0, 0, 1
            on_release: app.stop()


<PlayingScreen>:
    name: 'playing_screen'
    FloatLayout:
        canvas:
            Color:
                rgba: 0.4, 0.16, 0.1, 1
            Rectangle:
                size: self.size
                pos:self.pos

        Label:
            id: player0_proposal
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            size_hint: 0.15, 0.1
            text: 'Weiter'
            color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                Ellipse:
                    pos: self.pos
                    size: self.size

        Label:
            id: player1_proposal
            pos_hint: {'center_x': 0.075, 'center_y': 0.6}
            size_hint: 0.15, 0.1
            text: 'Auf die Schellen'
            color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                Ellipse:
                    pos: self.pos
                    size: self.size

        Label:
            id: player2_proposal
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            size_hint: 0.15, 0.1
            text: 'Weiter'
            color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                Ellipse:
                    pos: self.pos
                    size: self.size
        Label:
            id: player3_proposal
            pos_hint: {'center_x': 0.925, 'center_y': 0.6}
            size_hint: 0.15, 0.1
            text: 'Weiter'
            color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                Ellipse:
                    pos: self.pos
                    size: self.size

        GridLayout:
            id: modebuttons
            pos_hint: {'center_x': 0.5, 'top': 0.7}
            size_hint: 0.6, 0.2

            rows: 3
            cols: 3
            Button:
                id: no_game
                size_hint: 0.2, 0.05
                text: 'Weiter'
                on_press: root.print_msg('Weiter')

            Button:
                id: partner_acorns
                size_hint: 0.2, 0.05
                text: 'Mit der Alten'
                on_press: root.print_msg('Auf die Alte')

            Button:
                id: partner_leaves
                size_hint: 0.2, 0.05
                text: 'Mit der Blauen'
                on_press: root.print_msg('Auf die Blaue')

            Button:
                id: partner_bells
                size_hint: 0.2, 0.05
                text: 'Mit der Schellen'
                on_press: root.print_msg('Auf die Schellen')

            Button:
                id: wenz
                size_hint: 0.2, 0.05
                text: 'Wenz'
                on_press: root.print_msg('Wenz')

            Button:
                id: solo_acorns
                size_hint: 0.2, 0.05
                text: 'Eichel Solo'
                on_press: root.print_msg('Eichel Solo')

            Button:
                id: solo_leaves
                size_hint: 0.2, 0.05
                text: 'Gras Solo'
                on_press: root.print_msg('Gras Solo')

            Button:
                id: solo_hearts
                size_hint: 0.2, 0.05
                text: 'Herz Solo'
                on_press: root.print_msg('Herz Solo')

            Button:
                id: solo_schellen
                size_hint: 0.2, 0.05
                text: 'Schellen Solo'
                on_press: root.print_msg('Schellen Solo')

        CardWidget:
            id: cards
            pos_hint: {'center_x': 0.5, 'top': 0.21}
            size_hint: 0.75, 0.2
            rows: 1
            cols: 8

            ImageButton:
                id: A
                source: '../images/Rueckseite.jpg'
                allow_stretch: True
                on_release: root.ids.cards.remove_widget(root.ids.A)

            ImageButton:
                id: B
                source: '../images/8Eichel.jpg'
                allow_stretch: True
                on_release: root.ids.cards.remove_widget(root.ids.B)

            ImageButton:
                id: C
                source: '../images/9Eichel.jpg'
                allow_stretch: True
                on_release: root.ids.cards.remove_widget(root.ids.C)

            ImageButton:
                id: D
                source: '../images/AEichel.jpg'
                allow_stretch: True
                on_release: root.ids.cards.remove_widget(root.ids.D)

            ImageButton:
                id: E
                source: '../images/7Herz.jpg'
                allow_stretch: True
                on_release: root.ids.cards.remove_widget(root.ids.E)

            ImageButton:
                id: F
                source: '../images/KHerz.jpg'
                allow_stretch: True
                on_release: root.ids.cards.remove_widget(root.ids.F)

            ImageButton:
                id: G
                source: '../images/UHerz.jpg'
                allow_stretch: True
                on_release: root.ids.cards.remove_widget(root.ids.G)

            ImageButton:
                id: H
                source: '../images/OGras.jpg'
                allow_stretch: True
                on_release: root.ids.cards.remove_widget(root.ids.H)

        Button:
            id: menu_btn
            text: 'Menu'
            pos_hint: {'right': 1, 'y': 0}
            size_hint: 0.05, 0.05
            on_release: app.root.current = 'menu_screen'
