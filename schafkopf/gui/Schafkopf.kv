

<BiddingWidget>:
    GridLayout:
        id: modebuttons
        pos_hint: {'center_x': 0.5, 'top': 0.7}
        size_hint: 0.7, 0.2

        rows: 2
        cols: 5
        Button:
            id: no_game
            size_hint: 0.2, 0.05
            text: 'Weiter'
            on_press: root.print_a('Weiter')

        Button:
            id: partner_acorns
            size_hint: 0.2, 0.05
            text: 'Mit der Alten'
            on_press: root.print_a('Auf die Alte')

        Button:
            id: partner_leaves
            size_hint: 0.2, 0.05
            text: 'Mit der Blauen'
            on_press: root.print_a('Auf die Blaue')

        Button:
            id: partner_bells
            size_hint: 0.2, 0.05
            text: 'Mit der Schellen'
            on_press: root.print_a('Auf die Schellen')

        Button:
            id: wenz
            size_hint: 0.2, 0.05
            text: 'Wenz'
            on_press: root.print_a('Wenz')

        Button:
            id: solo_acorns
            size_hint: 0.2, 0.05
            text: 'Eichel Solo'
            on_press: root.print_a('Eichel Solo')

        Button:
            id: solo_leaves
            size_hint: 0.2, 0.05
            text: 'Gras Solo'
            on_press: root.print_a('Gras Solo')

        Button:
            id: solo_hearts
            size_hint: 0.2, 0.05
            text: 'Herz Solo'
            on_press: root.print_a('Herz Solo')

        Button:
            id: solo_schellen
            size_hint: 0.2, 0.05
            text: 'Schellen Solo'
            on_press: root.print_a('Schellen Solo')

    CardWidget:
        id: cards
        pos_hint: {'center_x': 0.5, 'center_y': 0.15}

        rows: 1
        cols: 8

        AnchorLayout:
            id: A
            ImageButton:
                source: '../images/7Eichel.jpg'
                allow_stretch: True
                size_hint: 1, 0.25
                on_release: root.ids.cards.remove_widget(root.ids.A)

        AnchorLayout:
            id: B
            ImageButton:
                source: '../images/8Eichel.jpg'
                allow_stretch: True
                size_hint: 1, 0.25
                on_release: root.ids.cards.remove_widget(root.ids.B)

        AnchorLayout:
            id: C
            ImageButton:
                source: '../images/9Eichel.jpg'
                allow_stretch: True
                size_hint: 1, 0.25
                on_release: root.ids.cards.remove_widget(root.ids.C)

        AnchorLayout:
            id: D
            ImageButton:
                source: '../images/AEichel.jpg'
                allow_stretch: True
                size_hint: 1, 0.25
                on_release: root.ids.cards.remove_widget(root.ids.D)

        AnchorLayout:
            id: E
            ImageButton:
                source: '../images/7Herz.jpg'
                allow_stretch: True
                size_hint: 1, 0.25
                on_release: root.ids.cards.remove_widget(root.ids.E)

        AnchorLayout:
            id: F
            ImageButton:
                source: '../images/KHerz.jpg'
