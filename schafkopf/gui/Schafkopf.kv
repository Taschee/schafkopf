#:import FadeTransition kivy.uix.screenmanager.FadeTransition


<GameScreenManager>:
    transition: FadeTransition()
    MenuScreen:
    PlayingScreen:

<MenuScreen>
    name: 'menu_screen'
    FloatLayout:
        canvas:
            Color:
                rgba: 0.4, 0.16, 0.1, 1
            Rectangle:
                size: self.size
                pos:self.pos

        Button:
            size_hint: 0.4, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.62}
            text: 'Schafkopf!'
            background_normal: ''
            background_color: 0, 0, 0, 1
            on_release: app.root.new_game()

        Button:
            id: exit_btn
            size_hint: 0.4, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.38}
            text: 'Exit'
            background_normal: ''
            background_color: 0, 0, 0, 1
            on_release: app.stop()


<PlayingScreen>:
    name: 'playing_screen'
    FloatLayout:
        canvas:
            Color:
                rgba: 0.4, 0.16, 0.1, 1
            Rectangle:
                size: self.size
                pos:self.pos


        Label:
            id: player0_proposal
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            size_hint: 0.15, 0.1
            text: ''
            color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                Ellipse:
                    pos: self.pos
                    size: self.size

        Label:
            id: player1_proposal
            pos_hint: {'center_x': 0.075, 'center_y': 0.6}
            size_hint: 0.15, 0.1
            text: ''
            color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                Ellipse:
                    pos: self.pos
                    size: self.size

        Label:
            id: player2_proposal
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            size_hint: 0.15, 0.1
            text: ''
            color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                Ellipse:
                    pos: self.pos
                    size: self.size

        Label:
            id: player3_proposal
            pos_hint: {'center_x': 0.925, 'center_y': 0.6}
            size_hint: 0.15, 0.1
            text: ''
            color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                Ellipse:
                    pos: self.pos
                    size: self.size

        GridLayout:
            id: mode_buttons
            pos_hint: {'center_x': 0.5, 'top': 0.7}
            size_hint: 0.6, 0.2

            rows: 3
            cols: 3
            BidButton:
                id: no_game
                text: 'Weiter'

            BidButton:
                id: partner_acorns
                text: 'Mit der Alten'

            BidButton:
                id: partner_leaves
                text: 'Mit der Blauen'

            BidButton:
                id: partner_bells
                text: 'Mit der Schellen'

            BidButton:
                id: wenz
                text: 'Wenz'

            BidButton:
                id: solo_acorns
                text: 'Eichel Solo'

            BidButton:
                id: solo_leaves
                text: 'Gras Solo'

            BidButton:
                id: solo_hearts
                text: 'Herz Solo'

            BidButton:
                id: solo_bells
                text: 'Schellen Solo'

        CardWidgetTrickplay:
            id: cards
            pos_hint: {'center_x': 0.5, 'top': 0.21}
            size_hint: 0.75, 0.2
            rows: 1
            cols: 8

            ImageButton:
                id: A
                source: ''
                allow_stretch: True
                on_release:

            ImageButton:
                id: B
                source: ''
                allow_stretch: True
                on_release:

            ImageButton:
                id: C
                source: ''
                allow_stretch: True
                on_release:

            ImageButton:
                id: D
                source: ''
                allow_stretch: True
                on_release:

            ImageButton:
                id: E
                source: ''
                allow_stretch: True
                on_release:

            ImageButton:
                id: F
                source: ''
                allow_stretch: True
                on_release:

            ImageButton:
                id: G
                source: ''
                allow_stretch: True
                on_release:

            ImageButton:
                id: H
                source: ''
                allow_stretch: True
                on_release:



        Button:
            id: menu_btn
            text: 'Menu'
            pos_hint: {'right': 1, 'y': 0}
            size_hint: 0.05, 0.05
            on_release: app.root.current = 'menu_screen'
